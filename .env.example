# ===========================================
# MAF-Openclaw-Mini - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# -------------------------------------------
# SLACK CONFIGURATION (Required)
# -------------------------------------------
# Get these from https://api.slack.com/apps
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_APP_TOKEN=xapp-your-app-token
SLACK_USER_TOKEN=xoxp-your-user-token  # Optional: for reminders API
SLACK_SIGNING_SECRET=your-signing-secret

# -------------------------------------------
# AI PROVIDERS (At least one required)
# -------------------------------------------
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key  # Optional

# Default model
DEFAULT_MODEL=gpt-4o

# -------------------------------------------
# AZURE AI (Optional - for Microsoft Agent Framework)
# -------------------------------------------
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_API_KEY=your-azure-key
# AZURE_OPENAI_DEPLOYMENT=your-deployment-name

# -------------------------------------------
# MEMORY - mem0 (Optional)
# -------------------------------------------
# Get from https://app.mem0.ai
MEM0_API_KEY=your-mem0-api-key
MEMORY_ENABLED=true

# -------------------------------------------
# RAG CONFIGURATION (Optional)
# -------------------------------------------
RAG_ENABLED=true
RAG_EMBEDDING_MODEL=text-embedding-3-small
RAG_VECTOR_DB_PATH=./data/chroma
RAG_INDEX_INTERVAL_HOURS=1
RAG_MAX_RESULTS=10
RAG_MIN_SIMILARITY=0.5

# -------------------------------------------
# MCP - GitHub Integration (Optional)
# -------------------------------------------
# Get from https://github.com/settings/tokens
GITHUB_PERSONAL_ACCESS_TOKEN=ghp_your-github-token

# -------------------------------------------
# MCP - Notion Integration (Optional)
# -------------------------------------------
# Get from https://www.notion.so/my-integrations
NOTION_API_TOKEN=secret_your-notion-token

# -------------------------------------------
# APPLICATION SETTINGS
# -------------------------------------------
LOG_LEVEL=info  # debug, info, warn, error
DATABASE_PATH=./data/assistant.db
MAX_HISTORY_MESSAGES=50
SESSION_TIMEOUT_MINUTES=60

# -------------------------------------------
# SECURITY
# -------------------------------------------
# DM policy: open, pairing, allowlist
DM_POLICY=pairing

# Comma-separated list of allowed user IDs (or * for all)
ALLOWED_USERS=*

# Comma-separated list of allowed channel IDs (or * for all)
ALLOWED_CHANNELS=*

# -------------------------------------------
# FEATURE FLAGS
# -------------------------------------------
ENABLE_THREAD_SUMMARY=true
ENABLE_TASK_SCHEDULER=true
ENABLE_REACTIONS=true
ENABLE_TYPING_INDICATOR=true
